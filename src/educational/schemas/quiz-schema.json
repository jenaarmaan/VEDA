{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "VEDA Educational Quiz Schema",
  "description": "Schema for storing and validating educational quizzes in the VEDA platform",
  "type": "object",
  "required": ["id", "title", "description", "questions", "difficulty", "category", "metadata"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^quiz_[a-zA-Z0-9_]+$",
      "description": "Unique identifier for the quiz"
    },
    "title": {
      "type": "string",
      "minLength": 5,
      "maxLength": 200,
      "description": "Display title of the quiz"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Detailed description of the quiz content and objectives"
    },
    "questions": {
      "type": "array",
      "minItems": 1,
      "maxItems": 50,
      "items": {
        "$ref": "#/definitions/QuizQuestion"
      },
      "description": "Array of quiz questions"
    },
    "difficulty": {
      "type": "string",
      "enum": ["beginner", "intermediate", "advanced"],
      "description": "Difficulty level of the quiz"
    },
    "category": {
      "type": "string",
      "enum": ["health", "politics", "science", "technology", "economy", "social", "environment", "general"],
      "description": "Primary category of misinformation covered"
    },
    "timeLimit": {
      "type": "integer",
      "minimum": 30,
      "maximum": 3600,
      "description": "Time limit in seconds (optional)"
    },
    "passingScore": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100,
      "default": 70,
      "description": "Minimum score required to pass the quiz"
    },
    "metadata": {
      "$ref": "#/definitions/ContentMetadata"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Additional tags for categorization and search"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "default": "1.0.0",
      "description": "Version of the quiz schema"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "author": {
      "type": "string",
      "description": "Author or creator of the quiz"
    },
    "language": {
      "type": "string",
      "pattern": "^[a-z]{2}(-[A-Z]{2})?$",
      "default": "en",
      "description": "Language code (ISO 639-1)"
    }
  },
  "definitions": {
    "QuizQuestion": {
      "type": "object",
      "required": ["id", "type", "question", "correctAnswer", "explanation", "difficulty", "points"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^q_[a-zA-Z0-9_]+$",
          "description": "Unique identifier for the question"
        },
        "type": {
          "type": "string",
          "enum": ["multiple_choice", "true_false", "scenario", "drag_drop", "fill_blank"],
          "description": "Type of question"
        },
        "question": {
          "type": "string",
          "minLength": 10,
          "maxLength": 1000,
          "description": "The question text"
        },
        "options": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "minItems": 2,
          "maxItems": 6,
          "description": "Answer options (required for multiple choice questions)"
        },
        "correctAnswer": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "description": "Correct answer(s)"
        },
        "explanation": {
          "type": "string",
          "minLength": 20,
          "maxLength": 1000,
          "description": "Explanation of the correct answer"
        },
        "difficulty": {
          "type": "string",
          "enum": ["beginner", "intermediate", "advanced"],
          "description": "Difficulty level of this specific question"
        },
        "points": {
          "type": "integer",
          "minimum": 1,
          "maximum": 50,
          "default": 10,
          "description": "Points awarded for correct answer"
        },
        "hints": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Optional hints for the question"
        },
        "media": {
          "type": "object",
          "properties": {
            "image": {
              "type": "string",
              "format": "uri"
            },
            "video": {
              "type": "string",
              "format": "uri"
            },
            "audio": {
              "type": "string",
              "format": "uri"
            }
          },
          "description": "Media attachments for the question"
        },
        "source": {
          "type": "string",
          "description": "Source or reference for the question content"
        }
      }
    },
    "ContentMetadata": {
      "type": "object",
      "required": ["estimatedTime", "prerequisites", "tags", "version", "lastUpdated"],
      "properties": {
        "estimatedTime": {
          "type": "integer",
          "minimum": 1,
          "maximum": 120,
          "description": "Estimated completion time in minutes"
        },
        "prerequisites": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required knowledge or completed modules"
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Content tags for categorization"
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$",
          "description": "Content version"
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "Last update timestamp"
        },
        "learningObjectives": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Learning objectives for this content"
        },
        "accessibility": {
          "type": "object",
          "properties": {
            "screenReaderCompatible": {
              "type": "boolean",
              "default": true
            },
            "keyboardNavigation": {
              "type": "boolean",
              "default": true
            },
            "highContrast": {
              "type": "boolean",
              "default": false
            }
          },
          "description": "Accessibility features"
        }
      }
    }
  }
}