
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all reads and writes to prevent unauthorized access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read their own user profile document.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read and write to their own verificationHistory subcollection.
    // This is crucial for creating, updating, and viewing their chat sessions.
    match /users/{userId}/verificationHistory/{docId} {
      allow read, write, create, update: if request.auth != null && request.auth.uid == userId;
    }

    // Allow any authenticated user to create a new contact message.
    // This secures the contact form.
    match /contacts/{contactId} {
      allow create: if request.auth != null;
    }

    // Note: Add any other specific rules for your application below.
    // The orchestration agent (server-side flow) will have admin access 
    // and bypass these client-side rules for its operations.
  }
}
