
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;

      // Users can create, read, and update documents in their own verificationHistory.
      // Writes are limited to specific fields to prevent tampering.
      match /verificationHistory/{historyId} {
        allow read: if request.auth.uid == userId;
        allow create: if request.auth.uid == userId;
        allow update: if request.auth.uid == userId;
      }
    }

    // Disallow all other reads/writes for security.
    // Add rules for other collections here if needed.
  }
}
