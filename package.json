{
  "name": "veda-educational-content-agent",
  "version": "1.0.0",
  "description": "VEDA Educational Content Agent provides users with contextualized learning resources and gamified modules to improve digital literacy and misinformation resilience.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest --testPathPattern=tests",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run test"
  },
  "keywords": [
    "veda",
    "misinformation",
    "education",
    "digital-literacy",
    "fact-checking",
    "gamification",
    "typescript",
    "ai",
    "machine-learning"
  ],
  "author": "VEDA Platform Team",
  "license": "MIT",
  "dependencies": {
    "handlebars": "^4.7.8"
  },
  "devDependencies": {
    "@types/handlebars": "^4.1.0",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "prettier": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veda-platform/educational-content-agent.git"
  },
  "bugs": {
    "url": "https://github.com/veda-platform/educational-content-agent/issues"
  },
  "homepage": "https://github.com/veda-platform/educational-content-agent#readme",
  "files": [
    "dist/",
    "src/",
    "schemas/",
    "templates/",
    "README.md",
    "LICENSE"
  ]
}